# Database Configuration
DATABASE_URL=postgresql://argo_user:argo_password@localhost:5432/argo_db
POSTGRES_USER=argo_user
POSTGRES_PASSWORD=argo_password
POSTGRES_DB=argo_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# LLM Configuration
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_PROVIDER=groq  # groq, openai or anthropic
LLM_MODEL=llama-3.3-70b-versatile
EMBEDDING_PROVIDER=local  # local or openai (Groq doesn't provide embeddings)
EMBEDDING_MODEL=all-MiniLM-L6-v2
MAX_TOKENS=4096
TEMPERATURE=0.1

# Vector Database
VECTOR_DB_TYPE=chroma  # chroma or faiss
CHROMA_PERSIST_DIR=./data/embeddings/chroma
FAISS_INDEX_PATH=./data/embeddings/faiss
EMBEDDING_DIMENSION=384  # 384 for all-MiniLM-L6-v2, 1536 for OpenAI text-embedding-3-small

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
CORS_ORIGINS=http://localhost:8501,http://localhost:3000
API_PREFIX=/api/v1

# Frontend Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
MAP_PROVIDER=leaflet  # leaflet or mapbox
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Data Paths
RAW_DATA_DIR=./data/raw
PROCESSED_DATA_DIR=./data/processed
PARQUET_DATA_DIR=./data/processed/parquet
EMBEDDINGS_DIR=./data/embeddings

# Ingestion Configuration
BATCH_SIZE=100
MAX_WORKERS=4
ENABLE_QUALITY_CHECKS=true

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/bluepy.log

# Security
SECRET_KEY=your_secret_key_change_this_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Feature Flags
ENABLE_STREAMING=true
ENABLE_SQL_VALIDATION=true
ENABLE_QUERY_CACHING=true
MAX_QUERY_RESULTS=10000

# MCP Configuration
MCP_MAX_RETRIES=3
MCP_TIMEOUT=30
SQL_WHITELIST_MODE=strict  # strict or permissive
